<?xml version="1.0" encoding="utf-8"?>
<log4net>
    <logger name="errorHandle">
        <level value="ERROR" />
        <appender-ref ref="errorHandleRollingLogFileAppender" />
    </logger>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <!-- 线上禁止配置在程序目录，需修改为具体日志路径 -->
        <file value="logs/myproject.log" />
        <rollingStyle value="Date" />
        <datePattern value="yyyyMMdd" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
        </layout>
    </appender>
    <appender name="errorHandleRollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value=".\\Logs\\errorHandle.log" />
        <!-- 输出到什么目录-->
        <appendToFile value="true" />
        <!-- 是否覆写到文件中-->
        <rollingStyle value="Size" />
        <datePattern value="yyyyMMdd" />
        <!-- 日志文件名-->
        <maxSizeRollBackups value="5" />
        <!-- 备份文件的个数-->
        <maximumFileSize value="5000KB" />
        <staticLogFileName value="true" />
        <!-- 是否使用静态文件名-->
        <!--layout负责把记入的内容格式化。其实就是决定日志文件要长什么样子。-->
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
        </layout>
    </appender>

    <root>
        <!--  -->
        <level value="Debug" />
        <appender-ref ref="RollingFileAppender" />
    </root>
</log4net>